<%- include('../header.ejs') %>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- bootstrap link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- font awesome cdn -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- javacript link -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <title>Document</title>
    <style>
        .container {
        padding: 2rem 0rem;
        }

        h4 {
        margin: 2rem 0rem 1rem;
        }
        
    </style>
</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col-12 table-responsive">
                <h3 class="alert alert-success text-center">VIEW</h3>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>SNo</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Mobile Number</th>
                            <th scope="col">Course</th>      
                            <th scope="col">Qualification</th>
                            <th scope="col">College</th>
                            <th scope="col">Branch</th>
                            <th scope="col">Image</th>
                            <th scope="col">Address</th>
                            <th scope="col">Gender</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% var i=1 %>
                            <tr>
                                <td><%= i++ %></td>
                                <td><%= data.name %></td>
                                <td><%= data.email %></td>
                                <td><%= data.mobile %></td>
                                <td><%= data.course %></td>
                                <td><%= data.qualification %></td>
                                <td><%= data.college %></td>
                                <td><%= data.branch %></td>
                                <td><img src="/imageupload/<%= data.image %>" alt="" width="114px" height="80px"></td>
                                <td><%= data.address %></td>
                                <td><%= data.gender %></td>
                            </tr>                    
                    </tbody>
                </table>
                <div class="d-flex justify-content-center">
                    <a href="/coursedisplay" class="btn btn-warning alert-success text-center">Back To The Display</a>
                </div>
            </div>
        </div>
    </div>

</body>

</html>

<%- include('../footer.ejs') %>